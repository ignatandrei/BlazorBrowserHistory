@page "/history"
@using BrowserHistory.Models
@using Microsoft.AspNetCore.Components.Routing
<PageTitle>User History</PageTitle>
<div class="my-component">
    Number of history items @browserVisitsSaved.Count
</div>

<table class="history-table">
    <tr class="history-tr">
        <th class="history-th">No</th>
        <th class="history-th">Name</th>
        <th class="history-th">Number of visits</th>
    </tr>
    @foreach (var (nr, item) in browserVisitsSaved.Index())
    {
        <tr class="history-tr">
            <td class="history-td">@(nr + 1)</td>
            <td class="history-td">
                <NavLink class="history-nav-link" href="@item.url">
                    <span class="history-span-text" aria-hidden="true">@item.name</span>
                </NavLink>
            </td>
            <td class ="history-td">@item.nrVisits</td>
        </tr>
    }
    
</table>
<small>
    Provider : @repo.NameProvider()
    Generated by <a rel="noopener noreferrer" target="_blank" title="@Generated.BBH.UI.TheAssemblyInfo.GeneratedNameNice @Generated.BBH.UI.TheAssemblyInfo.DateGeneratedUTC.ToString("r")" href="https://github.com/ignatandrei/BlazorBrowserHistory">BBH </a>
</small>
@* <NavLink class="history-nav-link" href="HistoryDebug">
    <span class="history-span-text" aria-hidden="true">HistoryDebug</span>
</NavLink>
 *@
@code {
    [Inject]
    IBrowserUserHistoryRepository repo { get; set; } = default!;

    List<BrowserVisits> browserVisitsSaved = [];
    protected override async Task OnInitializedAsync()
    {
        var dataMemory = repo.FromMemory();
        var dates = await repo.RetrieveLastDates(3);
        Console.WriteLine("Dates found:");
        foreach (var date in dates)
        {
            Console.WriteLine(date.ToString("r"));
            var dataDB = await repo.Retrieve(new DateTime(date.Year,date.Month,date.Day));
            browserVisitsSaved.AddRange(dataDB);
            
        }
        browserVisitsSaved.AddRange(dataMemory);
        Console.WriteLine($"Total NON consolidated items: {browserVisitsSaved.Count}");
        browserVisitsSaved = BrowserVisits.Consolidate(browserVisitsSaved.ToArray()).ToList();
        Console.WriteLine($"Total consolidated items: {browserVisitsSaved.Count}");
        StateHasChanged();
        await base.OnInitializedAsync();
    }   
    
}
