@code {
    [Inject]
    IBrowserUserHistoryRepository repo { get; set; } = default!;

    List<BrowserVisits> browserVisitsSaved = [];
    protected override async Task OnInitializedAsync()
    {
        var dataMemory = repo.FromMemory();
        var dataDB = await repo.Retrieve(DateTime.UtcNow);
        browserVisitsSaved = dataDB.ToList();
        browserVisitsSaved.AddRange(dataMemory);
        StateHasChanged();
        await base.OnInitializedAsync();
    }   
    
}
